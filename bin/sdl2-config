#!sh
prefix=..
exec_prefix=${prefix}
exec_prefix_set=no
libdir=${exec_prefix}/lib

#usage="\
#Usage: $0 [--prefix[=DIR]] [--exec-prefix[=DIR]] [--version] [--cflags] [--libs]"
usage="ERROR"

if test $# -eq 0; then
      echo "${usage}" 1>&2
      exit 1
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo $prefix
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo $exec_prefix
      ;;
    --version)
      echo 2.26.4
      ;;
    --cflags)
      echo -I${prefix}/include/SDL2  -Dmain=SDL_main
      ;;
    --libs)
      echo -L${exec_prefix}/lib   -lmingw32 -mwindows -lSDL2main -lSDL2
      ;;
    --static-libs)
#    --libs|--static-libs)
      sdl_static_libs=$(echo " -lmingw32 -mwindows -lSDL2main -lSDL2  -lmingw32 -mwindows -lSDL2main -lSDL2  -lm -luser32 -lgdi32 -lwinmm -limm32 -lole32 -loleaut32 -lversion -luuid -ladvapi32 -lsetupapi -lshell32 -ldinput8" | sed -E "s#-lSDL2[ $]#$libdir/libSDL2.a #g")
      echo -L${exec_prefix}/lib $sdl_static_libs
      ;;
    *)
      echo "${usage}" 1>&2
      exit 1
      ;;
  esac
  shift
done
